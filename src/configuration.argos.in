<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="10" random_seed="0" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="drone_controller">
      <actuators>
        <drone_flight_system implementation="default" />
        <drone_leds implementation="default" />
      </actuators>
      <sensors>
        <drone_flight_system implementation="default" />
        <drone_cameras_system implementation="default" show_frustum="false" show_tag_rays="true" />
      </sensors>
      <params script="@CMAKE_BINARY_DIR@/controller.lua" />
    </lua_controller>

    <lua_controller id="x">
      <actuators />
      <sensors />
      <params  />
    </lua_controller>
  </controllers>



  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="@CMAKE_BINARY_DIR@/libmy_extensions"
                  label="my_loop_functions" />

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="3, 3, 2" positional_index="grid" positional_grid_size="25,25,1">
    <drone id="drone">
      <body position="0,0,0" orientation="0,0,0"/>
      <controller config="drone_controller"/>
    </drone>
    <pipuck_ext id="pipuck_ext0" tag_medium="tags">
      <body position="1,0,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext1" tag_medium="tags">
      <body position="0.707,0.707,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext2" tag_medium="tags">
      <body position="0,1,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext3" tag_medium="tags">
      <body position="-0.707,0.707,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext4" tag_medium="tags">
      <body position="-1,0,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext5" tag_medium="tags">
      <body position="-0.707,-0.707,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext6" tag_medium="tags">
      <body position="0,-1,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
    <pipuck_ext id="pipuck_ext7" tag_medium="tags">
      <body position="0.707,-0.707,0" orientation="0,0,0"/>
      <controller config="x"/>
    </pipuck_ext>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" />
    <dynamics3d id="dyn3d">
      <floor />
      <gravity g="9.8" />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <tag id="tags" index="grid" grid_size="5,5,5" />
    <directional_led id="directional_leds" index="grid" grid_size="5,5,5" />
    <simple_radio id="nfc" index="grid" grid_size="5,5,5" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl show_boundary="false">
      <user_functions library="@CMAKE_BINARY_DIR@/libmy_qtopengl_extensions"
                      label="my_qtopengl_user_functions" />
    </qt-opengl>
  </visualization>

</argos-configuration>
